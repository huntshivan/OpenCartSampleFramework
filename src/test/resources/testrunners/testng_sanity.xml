<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Open Cart Regression Suite" verbose="3" thread-count="3" parallel="tests">


	<test name="Login Page Test">
		<parameter name="browser" value="firefox"/>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTests" />
		</classes>
	</test>


	<test name="Accounts Page Test">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="com.qa.opencart.tests.AccountPageTest" />
		</classes>
	</test>
	
	
	<test name="Search Results Page Test">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>
	


</suite>